<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-5.0.xsd">

    <changeSet id="1_create_environment_table" author="VGE">
        <comment>Crea la tabla environments para la gestión de entornos.</comment>

        <createTable tableName="environments">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true" />
            </column>

            <column name="description" type="TEXT">
                <constraints nullable="true" />
            </column>

            <column name="type" type="VARCHAR(255)">
                <constraints nullable="false" />
            </column>

            <column name="status" type="VARCHAR(150)">
                <constraints nullable="false" />
            </column>

            <column name="kubeconfigRef" type="TEXT">
                <constraints nullable="true" />
            </column>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false" />
            </column>
            <column name="updated_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()" />

        </createTable>
    </changeSet>

    <changeSet id="2_create_environment_index" author="VGE">
        <comment>Crea un índice en la columna 'name' para búsquedas rápidas.</comment>

        <createIndex
            indexName="idx_app_environment_name"
            tableName="environments"
            unique="true">
            <column name="name" />
        </createIndex>
    </changeSet>

    <changeSet id="3_create_environment_sequence" author="VGE" runOnChange="true">
        <comment>Crea la secuencia para la clave primaria de environments.</comment>

        <createSequence sequenceName="environments_pk_seq" incrementBy="1" startValue="1" />
    </changeSet>

    <changeSet id="4_create_environment_users_table" author="VGE">
        <comment>Crea la tabla environment_users para la gestión de entornos y usuarios.</comment>

        <createTable tableName="environment_users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="environment_id" type="BIGINT">
                <constraints nullable="false" />
            </column>

            <column name="user_id" type="BIGINT">
                <constraints nullable="false" />
            </column>

            <column name="role" type="VARCHAR(100)">
                <constraints nullable="false" />
            </column>

            <column name="created_at" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="NOW()">
                <constraints nullable="false" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="5_create_environment_users_index" author="VGE">
        <comment>Crea un índice en la columna 'user_id' para búsquedas rápidas.</comment>

        <createIndex
                indexName="idx_app_environment_users"
                tableName="environment_users"
                unique="true">
            <column name="user_id" />
        </createIndex>
    </changeSet>

    <changeSet id="6_create_environment_users_sequence" author="VGE" runOnChange="true">
        <comment>Crea la secuencia para la clave primaria de environment_users.</comment>

        <createSequence sequenceName="environment_users_pk_seq" incrementBy="1" startValue="1" />
    </changeSet>

</databaseChangeLog>