<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="009-create-projects" author="paas">
        <createTable tableName="projects">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="environment_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_project_environment"
                    references="environments(id)" />
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false" />
            </column>

            <column name="description" type="varchar(255)" />

            <column name="created_at" type="timestamp" />
        </createTable>

        <addUniqueConstraint
            tableName="projects"
            columnNames="environment_id,name"
            constraintName="uk_project_environment_name" />
    </changeSet>

</databaseChangeLog>