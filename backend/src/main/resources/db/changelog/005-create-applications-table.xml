<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.25.xsd">

    <changeSet id="005-1-create-applications" author="paas">
        <createTable tableName="applications">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false" />
            </column>

            <column name="project_id" type="uuid">
                <constraints nullable="false" foreignKeyName="fk_application_project"
                    references="projects(id)" />
            </column>

            <column name="name" type="varchar(100)">
                <constraints nullable="false" />
            </column>

            <column name="description" type="varchar(255)" />

            <column name="git_repository" type="varchar(255)">
                <constraints nullable="false" />
            </column>

            <column name="git_branch" type="varchar(100)" defaultValue="main" />

            <column name="type" type="varchar(50)">
                <constraints nullable="false" />
            </column>

            <column name="replicas" type="int" defaultValueNumeric="1" />

            <column name="auto_scalable" type="boolean" defaultValueBoolean="false" />

            <column name="created_at" type="timestamp" />
        </createTable>

        <addUniqueConstraint
            tableName="applications"
            columnNames="project_id,name"
            constraintName="uk_application_project_name" />
    </changeSet>

    <changeSet id="005-2-add-application-status" author="paas">
        <addColumn tableName="applications">
            <column name="status" type="varchar(50)" defaultValue="CREATED" />
            <column name="image_name" type="varchar(255)" />
        </addColumn>
    </changeSet>

    <changeSet id="005-3-add-application-git-credentials" author="paas">
        <addColumn tableName="applications">
            <column name="git_username" type="varchar(255)" />
            <column name="git_password_or_token" type="varchar(255)" />
            <column name="git_private_key" type="varchar(255)" />
            <column name="git_passphrase" type="varchar(255)" />
        </addColumn>
    </changeSet>

    <changeSet id="005-4-add-application-build-status" author="paas">
        <addColumn tableName="applications">
            <column name="build_status" type="varchar(50)" />
        </addColumn>
    </changeSet>

</databaseChangeLog>